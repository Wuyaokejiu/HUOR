<view class='container {{mode == "light" ? "light":"dark" }}'>
    <text class="title">Publishing</text>
    <l-input label="title" placeholder="please input activity title"
             bind:linblur="onTitle" />
<!--    <text>activity type：</text>-->
<!--    <l-radio-group noneChecked="{{false}}"-->
<!--                   l-class="radio"-->
<!--                   bind:linchange="changeRadio"-->
