/* pages/mine/mine.wxss */
.container{
  margin:0 50rpx 0 50rpx;
  display: flex;
  flex-direction: column;
  font-size: 40rpx;
  
}

.userinfo {
  margin-top: 50rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  
  color: #d19016;
}

.content{
  margin:100rpx 0rpx 0 0rpx;
  justify-content: space-between;
}

.nickname{
  margin-top:30rpx;
  font-size:40rpx;
  font-weight: 500;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.content_style{
  margin:25rpx 0 25rpx 0;
  display: flex;
  flex-direction: column;
  justify-content: center;  
}

.item{
  padding-top: 35rpx;
  padding-bottom: 35rpx;
 
}

.line{
  width: 100%;
  height: 3rpx;
  background: #5c5344;
  opacity: 0.5;

}



